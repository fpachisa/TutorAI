      "id": "item1",
      "type": "computation",
      "difficulty": "E",
      "stem": "Find √36.",
      "answer": "6",
      "worked": [
        "√36 means 'what number squared equals 36?'",
        "6² = 6 × 6 = 36",
        "Therefore √36 = 6"
      ],
      "conceptTags": ["square_root", "perfect_squares"]
    },
    {
      "id": "item2",
      "type": "computation",
      "difficulty": "E",
      "stem": "Find ∛27.",
      "answer": "3",
      "worked": [
        "∛27 means 'what number cubed equals 27?'",
        "3³ = 3 × 3 × 3 = 27",
        "Therefore ∛27 = 3"
      ],
      "conceptTags": ["cube_root", "perfect_cubes"]
    },
    {
      "id": "item3",
      "type": "computation",
      "difficulty": "M",
      "stem": "Find √144 + ∛64.",
      "answer": "16",
      "worked": [
        "√144 = 12 (since 12² = 144)",
        "∛64 = 4 (since 4³ = 64)",
        "√144 + ∛64 = 12 + 4 = 16"
      ],
      "conceptTags": ["square_root", "cube_root", "addition"]
    }
